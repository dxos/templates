{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "include": [
      "src",
      "src/**/*.json"
    ],
    "lib": [
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "types": ["node", "jest"],
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
